{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "vue-i18n": [
        "src/lib/vue-i18n-fallback.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
